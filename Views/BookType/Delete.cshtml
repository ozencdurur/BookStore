@model BookType

<form method="post">
	<input asp-for="Id" hidden/>
	<div class="pt-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-dark">Kitap Türü Sil</h2>
		</div>
		<div class="mb-3">
			<label asp-for="Name" class="p-0"></label>
