@model BookType

<form method="post">
	<div class="pt-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-dark">Kitap Türü Güncelle</h2>
		</div>
		<div class="mb-3">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-dark">Kitap Türü Güncelle</button>
		<a asp-controller="BookType" asp-action="Index" class="btn btn-dark">Geri</a>
	</div>
</form>