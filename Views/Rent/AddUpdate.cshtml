@model Rent

<form method="post" enctype="multipart/form-data">
	<div class="row">
		<div class="col-10">
			<div class="border pt-3 mt-5">
				<div class="row pb-3">
					<h2 class="text-primary">@(Model == null ? "Yeni Kitap Kiralama" : "Kitap Kiralama Güncelleme")</h2>
				</div>
				<div class="mb-3">
					<label asp-for="studentId" class="p-0"></label>
					<input asp-for="studentId" class="form-control" />
					<span asp-validation-for="studentId" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="BookId" class="p-0"></label>
					<select asp-for="BookId" asp-items="ViewBag.BookList" class="form-select"></select>
				</div>
				@if (Model != null)
				{
					<button type="submit" class="btn btn-dark">Kitap Kiralama Güncelle</button>
				}
				else
				{
					<button type="submit" class="btn btn-dark">Yeni Kitap Kiralama</button>
				}
				<a asp-controller="Rent" asp-action="Index" class="btn btn-dark">Geri</a>
			</div>
		</div>
		<div class="col-2">
			@if (Model != null)
			{
				<br />
				<img src="@Model.Book.ImageUrl" width="100%" style="border-radius: 7px; border: 1px; solid; #bbb9b9" />
			}
		</div>
		</div>
</form>